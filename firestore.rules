rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // A user can only read, create, and update their own profile.
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Programs Collection
    match /programs/{programId} {
      // Anyone can read program details.
      allow read: if true;
      // Writing is disallowed from the client.
      allow write: if false;

      // Tasks Sub-collection
      match /tasks/{taskId} {
        // Anyone can read task details.
        allow read: if true;
        // Writing is disallowed from the client.
        allow write: if false;
      }
    }

    // Enrollments Collection
    match /enrollments/{enrollmentId} {
      // A user can only read and update their own enrollment documents.
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      // A user can only create an enrollment for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if false;
    }
  }
}
